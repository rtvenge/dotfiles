[user]
	name = Ryan Tvenge
	email = ryan@hoverboardstudios.com
[core]
	excludesfile = /Users/rtvenge/.gitignore_global
[mergetool]
	keepBackup = true
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = Kaleidoscope
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[merge]
	tool = Kaleidoscope
[push]
	default = current
[url "https://"]
	insteadOf = git://
[push]
	default = simple
[gui]
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[gui]
	recentrepo = /Users/rtvenge/Sites/localwordpress_vvv/www/insurnacelibrary/htdocs
	recentrepo = /Users/rtvenge/Sites/site_tracker
	recentrepo = /Users/rtvenge/Sites/GitHubLocal/Provenance
	recentrepo = /Users/rtvenge/.kalabox/apps/ccw2016/code
[alias]
	st = status --branch --short
	cwp = git add -A && git commit -am "upgrading wordpress core/themes/plugins"
	wat = log --graph --decorate --oneline -15
	cd = checkout
	patch = add --patch
	unstage = reset HEAD --
	unstage-patch = reset HEAD --patch
	com = commit -am
	amend = commit --amend --no-edit
	follow = log --follow -p
