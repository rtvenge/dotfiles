#my custom alias'
if [[ "$HOME" == "/Users/rtvenge" ]]; then
  alias rm='trash'
fi
alias gcwp='echo "Nope! use git cwp"' # Keep these until I get used to new alias' in .gitconfig
alias gs='echo "Nope! use git st"' # Keep these until I get used to new alias' in .gitconfig
alias gc='echo "Nope! use git coma"' # Keep these until I get used to new alias' in .gitconfig
alias edithosts='atom /etc/hosts'
alias pythonserver="python -m SimpleHTTPServer"
alias v='vagrant'
alias z='brew --prefix' /etc/profile.d/z.sh

# List all instances of Virtual Box
alias lsbox="ps aux | grep '[V]BoxHeadless' | awk '{ print \$2 }' | xargs -I {} lsof -a -d cwd -p {}"

alias ip="ifconfig |grep inet"

# To easily share file through command line
# https://github.com/dutchcoders/transfer.sh/
transfer() {
  # write to output to tmpfile because of progress bar
  tmpfile=$( mktemp -t transferXXX )
  curl --progress-bar --upload-file $1 https://transfer.sh/$(basename $1) >> $tmpfile;
  cat $tmpfile;
  rm -f $tmpfile;
}

alias transfer=transfer
alias drush='/Applications/DevDesktop/tools/drush'
